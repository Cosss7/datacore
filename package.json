{
  "name": "datacore",
  "version": "0.1.0",
  "description": "Reactive data engine for Obsidian.md.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "npx rollup --config rollup.config.js --environment BUILD:production",
    "build-library": "npx rollup --config rollup.config.js --environment BUILD:lib",

    "test": "npx jest",
    "test-watch": "npx jest -i --watch --no-cache",

    "check-format": "npx prettier --check src",
